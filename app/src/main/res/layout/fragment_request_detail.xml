<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/onBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:tint="#032e52"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/back"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textColor="#032e52"
        android:layout_marginTop="34dp"
        android:layout_centerHorizontal="true"
        android:text="@string/my_requests"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_below="@id/title"
        android:layout_above="@+id/buttons"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_below="@id/title"
            android:layout_width="match_parent"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:background="@drawable/faq_item_bg"
                android:layout_height="48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:textColor="#273d52"
                    android:textSize="16sp"
                    android:text="@string/application_number"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/applicationNumber"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="16dp"
                    android:textColor="#032e52"
                    android:textSize="17sp"
                    android:text="0"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:background="@drawable/faq_item_bg"
                android:layout_marginTop="8dp"
                android:layout_height="48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:textColor="#273d52"
                    android:textSize="16sp"
                    android:text="@string/price"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="16dp"
                    android:textColor="#032e52"
                    android:textSize="17sp"
                    android:text="$0"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:background="@drawable/faq_item_bg"
                android:layout_marginTop="8dp"
                android:layout_height="48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:textColor="#273d52"
                    android:textSize="16sp"
                    android:text="@string/date"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="16dp"
                    android:textColor="#032e52"
                    android:textSize="17sp"
                    android:text="00.00.0000"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/faq_item_bg"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="#273d52"
                    android:textSize="16sp"
                    android:text="@string/address"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="8dp"
                    android:textColor="#032e52"
                    android:textSize="17sp"
                    android:text="Unknown"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textColor="#273d52"
                        android:textSize="16sp"
                        android:text="@string/miles"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/miles"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textColor="#032e52"
                        android:textSize="17sp"
                        android:text="0"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textColor="#273d52"
                        android:textSize="16sp"
                        android:text="@string/travel_time"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/travelTime"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textColor="#032e52"
                        android:textSize="17sp"
                        android:text="0"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/onProducts"
                android:layout_width="match_parent"
                android:background="@drawable/faq_item_bg"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/productsText"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textColor="#273d52"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/product_list"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/chevron_down"
                    android:layout_height="24dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/productRecycler"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_marginTop="46dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="66dp"
        android:layout_marginLeft="16dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_marginRight="16dp"
        android:layout_height="58dp">

        <FrameLayout
            android:id="@+id/onCall"
            android:layout_width="48dp"
            android:visibility="invisible"
            android:background="@drawable/round_light_bg"
            android:layout_marginRight="10dp"
            android:layout_height="48dp">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/call_phone"/>

        </FrameLayout>

        <Button
            android:id="@+id/onDecline"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/decline"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/button_bg_left"/>

        <Button
            android:id="@+id/onAccept"
            android:layout_width="0dp"
            android:layout_marginLeft="1dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/accept"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/button_bg_right"/>
    </LinearLayout>

</RelativeLayout>
