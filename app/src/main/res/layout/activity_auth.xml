<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@drawable/bg"
    android:overScrollMode="never"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".presentation.view.auth.AuthActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingBottom="0dp">

            <ImageView
                android:id="@+id/onBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:tint="#032e52"
                android:layout_marginLeft="16dp"
                android:layout_gravity="bottom"
                android:src="@drawable/back"/>

            <TextView
                android:id="@+id/screenName"
                android:layout_width="wrap_content"
                android:textSize="16.5sp"
                android:textColor="#032e52"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center_horizontal|bottom"
                android:text=""
                android:padding="5dp"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/walli"/>

        <FrameLayout
            android:id="@+id/buttonsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/loginEdit"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:hint="@string/login"
                    android:textColor="#fff"
                    android:textSize="16.5sp"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    app:backgroundTint="#ffffff"
                    android:paddingLeft="9dp"
                    android:imeOptions="actionDone"
                    android:textColorHint="#bbffffff"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/passEdit"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:hint="@string/password"
                    android:textColor="#fff"
                    android:textSize="16.5sp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    app:backgroundTint="#ffffff"
                    android:paddingLeft="9dp"
                    android:textColorHint="#bbffffff"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/confirmPassEdit"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:hint="@string/confirm_password"
                    android:textColor="#fff"
                    android:textSize="16.5sp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    app:backgroundTint="#ffffff"
                    android:paddingLeft="9dp"
                    android:textColorHint="#bbffffff"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="10dp"
                    android:clipToPadding="false"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/onLogin"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="@string/login"
                        android:textColor="#517b93"
                        android:textAllCaps="false"
                        android:textSize="18.5sp"
                        android:background="@drawable/button_bg"/>

                    <Button
                        android:id="@+id/onSignup"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/registraion"
                        android:textColor="#517b93"
                        android:textAllCaps="false"
                        android:textSize="18.5sp"
                        android:background="@drawable/button_bg"/>

                    <Button
                        android:id="@+id/onRecover"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/recover_pass"
                        android:textColor="#517b93"
                        android:textAllCaps="false"
                        android:textSize="18.5sp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/button_bg"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/onMiddleButton"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#517b93"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/registraion"
                    android:padding="5dp"
                    android:layout_height="wrap_content" />

                <!-- Stub view for auto-margin -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <View
                    android:layout_width="match_parent"
                    android:background="#4c517b93"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="60dp"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/onBottomButton"
                    android:layout_width="wrap_content"
                    android:textSize="17.5dp"
                    android:textColor="#517b93"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/faq"
                    android:layout_marginBottom="20dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content">

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</ScrollView>
